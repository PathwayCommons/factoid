$infoWidth = 20em;

body {
	padding: 0;
	height: 100%;
	width: 100%;
}

#info {
	position: absolute
	width: $infoWidth;
	height: auto;
	right: 0;
	top: 0;
	bottom: 0;
	z-index: 1;
}

#graph {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: $infoWidth;
	height: auto;
	width: auto;
	z-index: 0;
	background: #fff;
	box-shadow: inset 0 0 0.75em rgba(0, 0, 0, 0.25);
	border: 1px solid #d5d5d5;
}